---
import Header from '@/components/header/Header.astro';
import Footer from '@/components/footer/Footer.astro';

import '../styles/main.css';
import '../assets/css/glider.min.css';
import '../styles/header.css';

const siteUrl = 'https://aitamasleepcoaching.com';

const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();

export interface Props {
	title: string;
	description: string;
	ogImage?: string;
	lang: 'es' | 'eu';
	noindex?: boolean;
	preloadImages?: string[];
}

const {
	title,
	description,
	ogImage = '/img/banner.png',
	lang,
	noindex = false,
	preloadImages = [],
} = Astro.props;

const currentLang = lang;

const fullImageUrl = ogImage.startsWith('http')
	? ogImage
	: `${siteUrl}${ogImage.startsWith('/') ? '' : '/'}${ogImage}`;

const localeCode = currentLang === 'eu' ? 'eu_ES' : 'es_ES';

const GA_MEASUREMENT_ID = 'G-XXXXXXXXXX';
---

<!doctype html>
<html lang={currentLang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://res.cloudinary.com" crossorigin />
		<link rel="dns-prefetch" href="https://res.cloudinary.com" />

		{
			preloadImages.map((imgUrl) => (
				<link rel="preload" as="image" href={imgUrl} fetchpriority="high" />
			))
		}

		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="author" content="Aitama Sleep Coaching" />

		<link rel="canonical" href={canonicalUrl} />

		{noindex && <meta name="robots" content="noindex, nofollow" />}

		<link
			rel="alternate"
			hreflang="es"
			href={`${siteUrl}/es${Astro.url.pathname.replace(/^\/(es|eu)/, '')}`}
		/>
		<link
			rel="alternate"
			hreflang="eu"
			href={`${siteUrl}/eu${Astro.url.pathname.replace(/^\/(es|eu)/, '')}`}
		/>
		<link rel="alternate" hreflang="x-default" href={siteUrl} />

		<script
			type="text/partytown"
			src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}
		></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag('js', new Date());
			gtag('config', '{GA_MEASUREMENT_ID}');
		</script>

		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImageUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content={localeCode} />
		<meta property="og:site_name" content="Aitama Sleep Coaching" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={fullImageUrl} />

		<meta name="theme-color" content="#ffffff" />
		<meta name="msapplication-TileColor" content="#ffffff" />

		<link rel="icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

		<link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

		<slot name="head" />
	</head>

	<body>
		<Header />

		<main id="main-content">
			<slot />
		</main>

		<Footer />

		<script src="../assets/js/glider.min.js"></script>

		<style>
			.button__link {
				display: inline-block;
				margin: 3rem 3rem 0;
				color: #fff;
				padding: 1rem;
				font-family: sans-serif;
				font-weight: bold;
				position: absolute;
				right: 0;
				text-transform: uppercase;
			}
			.button__link:hover {
				background-color: #000;
			}
		</style>
	</body>
</html>
